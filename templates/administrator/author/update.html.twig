{% extends 'base.html.twig' %}

{% form_theme formAuthor 'bootstrap_4_layout.html.twig' %}

{% block title %}Agence Catherine Nabokov - Modifier un auteur{% endblock %}

{% block icon %}
    <link rel="icon" href="{{ asset('images/logo2.jpg') }}" type="image/jpg" sizes="16x16">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style_admin.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
{% endblock %}

{% block body %}

    {% include('administrator/includes/navbar.html.twig') %}

    <div class="container fond">

        <div class="row">
			<div class="col-4">
				<h3 class="titre">Modifier l'auteur</h3>
			</div>
		</div>
		<br><br>
        <div class="row justify-content-center">
            <div class="col-8">
                {{ form_start(formAuthor) }}
                    <div class="form-group row">
                        <div class="col-sm-3 col-form-label">{{ form_label(formAuthor.lastName, 'NOM') }}</div>
                        <div class="col-sm-9">{{ form_row(formAuthor.lastName) }}</div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3 col-form-label">{{ form_label(formAuthor.firstName, 'PRENOM') }}</div>
                        <div class="col-sm-9">{{ form_row(formAuthor.firstName) }}</div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3 col-form-label">{{ form_label(formAuthor.biography, 'BIOGRAPHIE') }}</div>
                        <div class="col-sm-9">{{ form_row(formAuthor.biography) }}</div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3 col-form-label">
                            {{ form_label(formAuthor.imageFile, 'PHOTO') }}
                        </div>
                        <div class="form-control-file col-sm-9">
                            {{ form_row(formAuthor.imageFile) }}
                        </div>
                    </div>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-info" style="color: #091740;">Modifier l'auteur</button>
                    </div>
                {{ form_end(formAuthor) }}
            </div>
        </div>
    </div>

{% endblock %}
