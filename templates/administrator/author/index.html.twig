{% extends 'base.html.twig' %}

{% block title %}Agence Catherine Nabokov - Les auteur.rice.s{% endblock %}

{% block icon %}
    <link rel="icon" href="{{ asset('images/favicon.png') }}" type="image/jpg" sizes="16x16">
{% endblock %}

{% block stylesheets %} 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/style_admin.css') }}">
{% endblock %}

{% block body %}

    {% include('administrator/includes/navbar.html.twig') %}

    <div class="container fond">

        <div class="row justify-content-between">
            <div class="col-4">
                <h3 class="titre">Les auteur.ice.s</h3>
            </div>
            <div class="col-3">
                <div class="form-row">
                    <div class="col-10">
                        <input type="text" class="form-control" placeholder="Rechercher">
                    </div>
                    &nbsp;
                    <a href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search text-dark" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
        <br>
        
        {# Alert d'ajout d'un nouvel auteur #}
        {% for message in app.flashes('add_author_success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Félicitations ! </strong>{{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {# Alert de modification d'un auteur #}
        {% for message in app.flashes('edit_author_success') %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Félicitations ! </strong>{{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {# Alert de suppression d'un auteur #}
        {% for message in app.flashes('delete_author_success') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Félicitations ! </strong>{{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {# Alert de modification d'un auteur qui n'existe pas #}
        {% for message in app.flashes('author_notFound') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        {# Alert d'ajout d'un auteur qui existe déja #}
        {% for message in app.flashes('author_alreadyExist') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endfor %}

        <br>
        <div class="row">
            <div class="col-md-3">
                <div class="profile-card-4 text-center">
                    <figure>
                        <img src="{{ asset('images/authors/auteurs.jpg') }}" class="img img-responsive d-flex flex-column align-items-center" width="300px" alt="ajout d'auteur">
                    </figure>

                    <div class="profile-content">
                        <div class="profile-description" style="color: #091740; font-family: 'Inria-Regular';">
                            AJOUTER UN.E AUTEUR.ICE
                        </div>
                        <br>
                        <div class="row">
                            <div class="col">
                                <a href="{{path('author_new')}}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus-circle-dotted text-dark" viewBox="0 0 16 16">
