{% extends 'base.html.twig' %}

{% block title %}Hello auteur!{% endblock %}

{% block body %}


    {# Afficher tout les auteurs et jout des lien pour affichage individuel #}
    <div style="display: flex; justify-content: space-around">
        {% for author in authors %}
        <a href="{{ path('author_show', {id:author.id}) }}" style="color:black;text-decoration: none;">
            <div style="padding:10px; border: solid 1px;">
                {{ author.firstname|capitalize }} {{ author.lastname|upper }}<br>
                <h2>Biographie du auteur</h2>

                {% if author.imageName is defined and author.imageName is not empty %}
                    {# <img src="{{ asset('images/authors/' ~ author.imageName ) }}" alt="photo du auteur" width="400px"><br><br> #}
                    <img src="{{ vich_uploader_asset(author, 'imageFile') }}" alt="photo du auteur" width="400px"><br>
                    <br>
                {% endif %}

                {{ author.biography }}
            </div>
        </a>
        {% endfor %}
    </div>
{% endblock %}
