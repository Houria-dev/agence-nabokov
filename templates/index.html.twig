                        <div class="livre small bg-gris"></div>
                        <div class="livre small bg-gris"></div>
                    </div>
                    <h2 class="bleu walbaum">actualités</h2>
                </div>
                <div id="actualites__titre--bas" class="bibliotheque__bas bg-bleu"></div>
            </div>

            <div id="actualites__livres" class="d-flex flex-wrap flex-lg-nowrap container justify-content-around">

                {# DÉBUT DE LA BOUCLE DES LIVRES #}
                {% for book in lastBooks %}
                <a class="livre mx-5 mb-5">
                    <figure class="d-flex flex-column align-items-center">
                        <img src="{{ asset('images/books/' ~ book.imageName) }}">
                        <div></div>
                    </figure>
                    <figcaption class="mt-3">
                        <h3>{{ book.title }}</h3>
                        <p class="font-s">{{ book.editor }} · {{ book.publicationDate|date('d/m/Y') }}</p>
                    </figcaption>
                </a>
                {% endfor %}
                {# FIN DE LA BOUCLE #}

            </div>

        </div>

